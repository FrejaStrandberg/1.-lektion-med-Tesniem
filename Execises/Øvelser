//EXERCISE 7 - basic
{

    Console.Write("Enter a number: ");
    int inputOne = Convert.ToInt32(Console.ReadLine());


    Console.Write("Enter a new number: ");
    int inputTwo = Convert.ToInt32(Console.ReadLine());


//addition 
    Console.WriteLine(inputOne + " + " + inputTwo + " = " + (inputOne + inputTwo));

    Console.WriteLine("{0} + {1} = {2} ",inputOne, inputTwo, (inputOne + inputTwo));

//Subtraction 
    Console.WriteLine("{0} - {1} = {2}", inputOne, inputTwo, (inputOne - inputTwo));

//Multiplication
    Console.WriteLine("{0} * {1} = {2}", inputOne, inputTwo, (inputOne * inputTwo));

//Division
    Console.WriteLine("{0}/{1} = {2}", inputOne, inputTwo, (inputOne/inputTwo));
}


//EXERCISE 8 -loop through numbers from 1 to 10 multiplied with x
{

int x;

    Console.Write("Enter a number: ");
    x = Convert.ToInt32(Console.ReadLine());

    Console.WriteLine("{0}*{1}={2}", x, 0, (x*0));
    Console.WriteLine("{0}*{1}={2}", x, 1, (x*1));
    Console.WriteLine("{0}*{1}={2}", x, 2, (x*2));
    Console.WriteLine("{0}*{1}={2}", x, 3, (x*3));
    Console.WriteLine("{0}*{1}={2}", x, 4, (x*4));
    Console.WriteLine("{0}*{1}={2}", x, 5, (x*5));
    Console.WriteLine("{0}*{1}={2}", x, 6, (x*6));
    Console.WriteLine("{0}*{1}={2}", x, 7, (x*7));
    Console.WriteLine("{0}*{1}={2}", x, 8, (x*8));
    Console.WriteLine("{0}*{1}={2}", x, 9, (x*9));
    Console.WriteLine("{0}*{1}={2}", x, 10, (x*10));
}




//EXERCISE 9 - The average of four input numbers - basic
{

int x, x2, x3, x4;

Console.WriteLine("Enter number one: ");
    x = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Enter number two: ");
    x2 = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Enter number three: ");
    x3 = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Enter number four: ");
    x4 = Convert.ToInt32(Console.ReadLine());
    
Console.WriteLine("The average of {0}, {1}, {2}, {3} is: {4}", x, x2, x3, x4, (x+x2+x3+x4)/4);
}



