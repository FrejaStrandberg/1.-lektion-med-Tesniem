//EXERCISE 1 - if statements 
{
Console.WriteLine("input two numbers to find out if they are equal or not");

Console.WriteLine("input 1st number: ");
int intOne = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("input 2nd number: ");
int intTwo = Convert.ToInt32(Console.ReadLine());

if (intOne==intTwo)
    Console.WriteLine("{0} and {1} are equal.", intOne, intTwo);

else
{
    Console.WriteLine("{0} and {1} are not equal.", intOne, intTwo);
}

}


//EXERCISE 3 - if statements 
{
Console.WriteLine("input a number to find out weather it is positive or negative: ");
int number = Convert.ToInt32(Console.ReadLine());

if (number >= 0)
{
Console.WriteLine("{0} is a positive number", number); 
}

else
{
Console.WriteLine("{0} is a negative number", number);
}
}


//EXERCISE 4 - if statements 

Console.WriteLine("Enter your age to see if you are old enough to vote");
int age = Convert.ToInt32(Console.ReadLine());

if (age > 18) 
{
Console.WriteLine("Congratulation! You can vote");
}

else
{
    Console.WriteLine("Sorry you are nor old enough to vore yet");
    Console.WriteLine("You would be able to  vote after {0} years", (18-age));
}



//EXSERCISE 1 - Switch case - beregning af rod af andengradsligning

int a, b, c, d;
double double1, double2, double3;

Console.WriteLine("Input the value of a, b and c to calculate the root of a quadratic equation.");

Console.WriteLine("Enter the value of a");
a = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Enter the value of b");
b = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Enter the value of c");
c = Convert.ToInt32(Console.ReadLine());


d = b * b - 4 * a * c; 

if (d > 0)
{
    Console.WriteLine("The quadratic equation has two roots");

    double1 = (-b - Math.Sqrt(d)) / (2 * a);
    double2 = (-b + Math.Sqrt(d)) / (2* a);

    Console.WriteLine("First root = {0}", double1);
    Console.WriteLine("Second root = {0}", double2);
}

else if (d == 0)          
{
    Console.WriteLine("The quadratic equation has one root");

    double3 = ((-b) / (2 * a));

    Console.WriteLine("The one root = {0}",double3);
}

else
{
    Console.WriteLine("There is no solution");
}


